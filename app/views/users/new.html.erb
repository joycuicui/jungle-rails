<h1 class="my-5">Sign Up</h1>

  <%= form_for :user, url: '/users' do |f| %>
    First Name: <%= f.text_field :first_name, class: "form-control mb-2" %>
    Last Name: <%= f.text_field :last_name, class: "form-control mb-2" %>
    Email: <%= f.text_field :email, class: "form-control mb-2" %>
    Password: <%= f.password_field :password, class: "form-control mb-2" %>
    Password Confirmation: <%= f.password_field :password_confirmation, class: "form-control mb-2" %>
    <%= f.submit "Submit", class: "mt-3 btn btn-primary btn-lg" %>
  <% end %>
