<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order! Order summary for <%= @order.email %></h4>
  </div>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Line Item</th>
          <th>Unit Price</th>
          <th>Item Qty</th>
          <th>Item Toal</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item|%>
          <%= render "line_item", line_item: line_item %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">ORDER TOTAL:</th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents / 100.00 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>

